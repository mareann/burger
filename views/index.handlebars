<div class="container-fluid">

  <div class="row">
    <div id="makeBurger" class="col-sm-4">

      <h2>Make-Da-Burger!</h2>
      <form class="create-form">
        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>
        <button type="submit">Make-Da-Burger</button>
      </form>
    <div id="readyBurgers">
      <h2>Burgers that are ready!</h2>
      {{!comment here }}
      <ul>
        {{#each burgers}}
          {{#unless this.devoured}}
            {{> burgers/burger-block devoured=false}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>
  </div>

    <div class="col-sm-3">
      <img src="assets/img/chef.png">
    </div>

    <div id="devourBurger" class="col-sm-4">
      <h2>Burgers that are devoured!</h2>
      <ul id="devourList">
       {{#each burgers}}
          {{#if this.devoured}}
            <li class="devouredBurger">
              {{this.burger_name}}
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>

    </div>
  </div>

</div>
