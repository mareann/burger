<h1>Hamburger Time!</h1>

<div class="container-fluid">

  <div class="row">
    <div class="col-sm-6" style="background-color:lightyellow;">
      <h2>Add a Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>

        <button type="submit">Add Burger</button>
      </form>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-6" style="background-color:lavender;">
      <h2>Burgers that are ready!</h2>
      {{!comment here }}
      <ul>
        {{#each burgers}}
          {{#unless this.devoured}}
            {{> burgers/burger-block devoured=false}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>

  <div class="col-sm-6" style="background-color:lavenderblush;">
  <h2>Burgers that are devoured!</h2>
  <ul>
    {{#each burgers}}
      {{#if this.devoured}}
        <li class="devouredBurger">
          {{this.burger_name}}
        </li>
      {{/if}}
    {{/each}}
  </ul>
  </div>
  
  </div>
</div>
